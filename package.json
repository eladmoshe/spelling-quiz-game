{
  "name": "spelling-quiz",
  "version": "1.0.0",
  "description": "A spelling quiz game",
  "main": "index.html",
  "type": "module",
  "homepage": "https://eladmoshe.github.io/spelling-quiz-game/",
  "scripts": {
    "start": "http-server . -c-1",
    "test": "jest",
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "concurrently \"npm run watch\" \"npm start\""
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/js/**/*.test.ts"
    ]
  }
}
