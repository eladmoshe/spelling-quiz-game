{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./js",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "*": ["js/*"]
    },
    "typeRoots": ["./node_modules/@types", "./js"]
  },
  "include": ["js/**/*"],
  "exclude": ["node_modules", "dist"]
}
